{
  "name": "__MSG_ext_name__",
  "version": "2.12.2",
  "author": "Bener",
  "manifest_version": 2,
  "description": "__MSG_ext_desc__",
  "default_locale": "en",
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "web_accessible_resources": ["css/*", "fonts/*", "images/*"],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "md-reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "matches": [
        "file://*/*.md",
        "file://*/*.mdx",
        "file://*/*.mkd",
        "file://*/*.markdown",
        "http://*/*.md",
        "http://*/*.mdx",
        "http://*/*.mkd",
        "http://*/*.markdown",
        "https://*/*.md",
        "https://*/*.mdx",
        "https://*/*.mkd",
        "https://*/*.markdown"
      ]
    }
  ],
  "commands": {
    "toggleSide": {
      "description": "__MSG_command_toggle_side__",
      "suggested_key": {
        "default": "Alt+Shift+B"
      }
    },
    "toggleCentered": {
      "description": "__MSG_command_toggle_centered__",
      "suggested_key": {
        "default": "Alt+Shift+C"
      }
    },
    "toggleRefresh": {
      "description": "__MSG_command_toggle_refresh__",
      "suggested_key": {
        "default": "Alt+Shift+R"
      }
    },
    "toggleTheme": {
      "description": "__MSG_command_toggle_theme__",
      "suggested_key": {
        "default": "Alt+Shift+T"
      }
    }
  },
  "permissions": ["storage"]
}
